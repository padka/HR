# Local development configuration (Docker: rs-postgres / rs-redis)
# Copy to .env.local and fill secrets (BOT_TOKEN, strong SESSION_SECRET if needed).

ENVIRONMENT=development

# Postgres in Docker (rs-postgres)
DATABASE_URL=postgresql+asyncpg://rs:pass@localhost:5432/rs

# Redis in Docker (rs-redis)
REDIS_URL=redis://localhost:6379/0
NOTIFICATION_BROKER=redis

# Rate limiting (dev: disabled by default, enable for testing)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REDIS_URL=redis://localhost:6379/1
TRUST_PROXY_HEADERS=false

# Admin UI auth (dev-only)
ADMIN_USER=admin
ADMIN_PASSWORD=

# Session secret (set to a strong random value if exposing ports)
SESSION_SECRET=
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=strict

# Bot
BOT_ENABLED=true
BOT_TOKEN=  # fill with real token locally; leave empty in git
BOT_CALLBACK_SECRET=dev-callback-secret-change-me-32chars-min
BOT_AUTOSTART=false

# Data directory (outside repo by default)
DATA_DIR=~/.recruitsmart_admin/data

# Logging
LOG_LEVEL=INFO
LOG_JSON=false
