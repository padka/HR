# HR Admin/Bot environment template
# Variables are loaded via backend/core/env.load_env() and consumed by backend/core/settings.py

# Core paths and database (backend/core/settings.py)
DATA_DIR=./data
DATABASE_URL=
SQL_ECHO=0

# Admin authentication & session (backend/apps/admin_ui/security.py)
ADMIN_USER=
ADMIN_PASSWORD=
ADMIN_DOCS_ENABLED=false
ADMIN_TRUSTED_HOSTS=localhost,127.0.0.1,testserver
ADMIN_RATE_LIMIT_ATTEMPTS=5
ADMIN_RATE_LIMIT_WINDOW_SECONDS=300
FORCE_SSL=false

# Session secrets (provide at least one of these; settings pick the first non-empty value)
SESSION_SECRET=
SESSION_SECRET_KEY=
SECRET_KEY=
SESSION_COOKIE_NAME=hr_admin_session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=strict

# Bot integration switches (backend/core/settings.py)
BOT_ENABLED=true
#ENABLE_TEST2_BOT=
BOT_INTEGRATION_ENABLED=true
BOT_FAILFAST=false
TEST2_REQUIRED=false
BOT_PROVIDER=telegram
BOT_TOKEN=
BOT_API_BASE=
BOT_USE_WEBHOOK=false
BOT_WEBHOOK_URL=
REDIS_URL=
STATE_TTL_SECONDS=604800
ADMIN_CHAT_ID=

# Business defaults & localisation
DEFAULT_COMPANY_NAME=SMART SERVICE
REJECTION_TEMPLATE_KEY=result_fail
TZ=Europe/Moscow
COMPANY_TZ=
KPI_NOW=
